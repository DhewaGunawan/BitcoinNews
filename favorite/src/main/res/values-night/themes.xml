<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimary</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="android:statusBarColor">@color/darkColorPrimary</item>
        <item name="android:windowBackground">@color/darkColorPrimary</item>
        <item name="android:navigationBarColor">@color/darkColorPrimary</item>
    </style>

    <style name="BaseMaterialTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimary</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="colorOnSurfaceVariant">@color/darkColorTextTitle</item>
        <item name="colorSurfaceContainerHigh">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
    </style>

    <style name="ConstraintBodyStyle">
        <item name="android:background">@color/darkColorBackground</item>
    </style>

    <style name="TextViewTitleWithoutBackgroundStyle">
        <item name="android:textColor">@color/orange</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="TextViewWithoutBackgroundStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="TextViewSameBackgroundStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="SwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/darkColorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialog</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="ProgressBarTextViewStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/greyscale</item>
    </style>

    <style name="Theme.BitcoinNews.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BitcoinNews.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>